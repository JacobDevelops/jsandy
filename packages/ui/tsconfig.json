{
	"include": [
		"./**/*.ts",
		"./src/**/*.ts",
		"./src/**/*.tsx",
		"./.storybook/**/*.ts",
		"./.storybook/**/*.tsx",
		"./styles/safelist.tsx"
	],
	"compilerOptions": {
		"allowJs": false,
		"allowSyntheticDefaultImports": true,
		"alwaysStrict": true,
		"baseUrl": ".",
		"declaration": true,
		"emitDecoratorMetadata": false,
		"esModuleInterop": true,
		"experimentalDecorators": false,
		"forceConsistentCasingInFileNames": true,
		"importHelpers": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"lib": ["DOM", "ESNext", "DOM.Iterable"],
		"moduleResolution": "bundler",
		"noEmit": true,
		"noFallthroughCasesInSwitch": false,
		"noImplicitAny": true,
		"noImplicitReturns": false,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"pretty": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"strictFunctionTypes": true,
		"strictNullChecks": true,
		"strictPropertyInitialization": true,
		"stripInternal": true,
		"target": "ES2022",
		"types": ["node"],
		"paths": {
			"@jsandy/ui/accordion": ["./src/components/accordion"],
			"@jsandy/ui/alert": ["./src/components/alert"],
			"@jsandy/ui/alert-dialog": ["./src/components/alert-dialog"],
			"@jsandy/ui/arrow": ["./src/components/arrow"],
			"@jsandy/ui/avatar": ["./src/components/avatar"],
			"@jsandy/ui/badge": ["./src/components/badge"],
			"@jsandy/ui/box": ["./src/layout/box"],
			"@jsandy/ui/button": ["./src/components/button"],
			"@jsandy/ui/calendar": ["./src/components/calendar"],
			"@jsandy/ui/card": ["./src/components/card"],
			"@jsandy/ui/checkbox": ["./src/components/checkbox"],
			"@jsandy/ui/cn": ["./src/lib/cn"],
			"@jsandy/ui/collapsible": ["./src/components/collapsible"],
			"@jsandy/ui/collection": ["./src/lib/collection"],
			"@jsandy/ui/columns": ["./src/layout/columns"],
			"@jsandy/ui/compose-events": ["./src/lib/compose-events"],
			"@jsandy/ui/compose-refs": ["./src/lib/compose-refs"],
			"@jsandy/ui/context": ["./src/lib/context"],
			"@jsandy/ui/dialog": ["./src/components/dialog"],
			"@jsandy/ui/dismissable-layer": ["src/lib/dismissable-layer"],
			"@jsandy/ui/dropdown-menu": ["./src/components/dropdown-menu"],
			"@jsandy/ui/focus-guards": ["./src/lib/focus-guards"],
			"@jsandy/ui/focus-scope": ["./src/components/focus-scope"],
			"@jsandy/ui/form": ["./src/components/form"],
			"@jsandy/ui/form/resolvers": ["./src/components/form/resolvers"],
			"@jsandy/ui/heading": ["./src/components/heading"],
			"lucide-react": ["./src/icons"],
			"@jsandy/ui/input": ["./src/components/input"],
			"@jsandy/ui/label": ["src/components/label"],
			"@jsandy/ui/loader": ["./src/components/loader"],
			"@jsandy/ui/menu": ["./src/components/menu"],
			"@jsandy/ui/number": ["./src/lib/number"],
			"@jsandy/ui/pagination": ["./src/components/pagination"],
			"@jsandy/ui/popover": ["./src/components/popover"],
			"@jsandy/ui/popper": ["./src/components/popper"],
			"@jsandy/ui/portal": ["./src/components/portal"],
			"@jsandy/ui/presence": ["./src/components/presence"],
			"@jsandy/ui/primitive": ["./src/components/primitive"],
			"@jsandy/ui/radio-group": ["./src/components/radio-group"],
			"@jsandy/ui/rect": ["./src/lib/rect"],
			"@jsandy/ui/responsive": ["./src/lib/responsive"],
			"@jsandy/ui/roving-focus": ["./src/components/roving-focus"],
			"@jsandy/ui/select": ["./src/components/select"],
			"@jsandy/ui/separator": ["./src/components/separator"],
			"@jsandy/ui/sheet": ["./src/components/sheet"],
			"@jsandy/ui/slot": ["./src/components/slot"],
			"@jsandy/ui/skeleton": ["./src/components/skeleton"],
			"@jsandy/ui/stack": ["./src/layout/stack"],
			"@jsandy/ui/styles": ["./styles/tailwind.css"],
			"@jsandy/ui/switch": ["./src/components/switch"],
			"@jsandy/ui/table": ["./src/components/table"],
			"@jsandy/ui/tabs": ["./src/components/tabs"],
			"@jsandy/ui/text": ["./src/components/text"],
			"@jsandy/ui/textarea": ["./src/components/textarea"],
			"@jsandy/ui/toast": ["./src/components/toast"],
			"@jsandy/ui/tooltip": ["./src/components/tooltip"],
			"@jsandy/ui/use-callback-ref": ["./src/hooks/use-callback-ref"],
			"@jsandy/ui/use-controllable-state": [
				"./src/hooks/use-controllable-state"
			],
			"@jsandy/ui/use-direction": ["./src/hooks/use-direction"],
			"@jsandy/ui/use-escape-keydown": ["./src/hooks/use-escape-keydown"],
			"@jsandy/ui/use-id": ["./src/hooks/use-id"],
			"@jsandy/ui/use-layout-effect": ["./src/hooks/use-layout-effect"],
			"@jsandy/ui/use-previous": ["./src/hooks/use-previous"],
			"@jsandy/ui/use-size": ["./src/hooks/use-size"],
			"@jsandy/ui/visually-hidden": ["./src/components/visually-hidden"]
		}
	}
}
