{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": [".next/**", "!.next/cache/**"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"test": {
			"dependsOn": ["^test"]
		},
		"test:coverage": {
			"dependsOn": ["^test:coverage"],
			"outputs": ["coverage/**"]
		},
		"test:watch": {
			"dependsOn": ["^test:watch"],
			"persistent": true
		}
	}
}
