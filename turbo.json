{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": [".next/**", "!.next/cache/**", "dist/**"]
		},
		"build:packages": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": ["dist/**"]
		},
		"cf:build": {
			"dependsOn": ["^cf:build", "build:packages"],
			"inputs": [
				"$TURBO_DEFAULT$",
				".env*",
				"next.config.*",
				"wrangler.*",
				"wrangler/**",
				"tailwind.config.*",
				"postcss.config.*",
				"tsconfig*.json",
				"package.json"
			],
			"outputs": [".open-next/**", ".next/**", "!.next/cache/**", "dist/**"]
		},
		"clean": {
			"dependsOn": ["^clean"]
		},
		"deploy": {
			"cache": false,
			"dependsOn": ["cf:build"]
		},
		"dev": {
			"dependsOn": ["^dev"],
			"persistent": true
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"test": {
			"dependsOn": ["^test"]
		},
		"test:coverage": {
			"dependsOn": ["^test:coverage"]
		},
		"test:watch": {
			"dependsOn": ["^test:watch"],
			"persistent": true
		},
		"typecheck": {
			"dependsOn": ["^typecheck"]
		}
	},
	"ui": "tui"
}
