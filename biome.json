{
	"$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on",
				"useSortedAttributes": "on",
				"useSortedKeys": "on",
				"useSortedProperties": "on"
			}
		},
		"enabled": true,
		"includes": [
			"**/*.js",
			"**/*.jsx",
			"**/*.ts",
			"**/*.tsx",
			"**/*.d.ts",
			"**/*.json",
			"**/*.jsonc",
			"!**/.open-next/**",
			"!**/.nx/cache/**",
			"!**/.nx/workspace-data/**",
			"!**/coverage/**",
			"!**/dist/**",
			"!**/build/**",
			"!**/.next/**",
			"!**/node_modules/**",
			"!**/bun.lock",
			"!**/worker-configuration.d.ts"
		]
	},
	"css": {
		"parser": {
			"tailwindDirectives": true
		}
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"**",
			"!**/coverage",
			"!**/dist",
			"!**/node_modules",
			"!**/bun.lock",
			"!**/.next",
			"!**/.content-collections",
			"!**/*env*",
			"!**/.open-next",
			"!**/.source",
			"!**/.nx",
			"!**/.wrangler"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"complexity": {
				"useLiteralKeys": {
					"fix": "safe",
					"level": "warn"
				}
			},
			"correctness": {
				"noNestedComponentDefinitions": "off",
				"noUnusedImports": { "fix": "safe", "level": "error" },
				"noUnusedVariables": "error",
				"useUniqueElementIds": "off"
			},
			"recommended": true,
			"style": { "useTemplate": { "fix": "safe", "level": "error" } },
			"suspicious": {
				"noUnknownAtRules": "off"
			}
		}
	},
	"overrides": [
		{
			"includes": ["**/packages/rpc/**"],
			"linter": {
				"rules": {
					"complexity": {
						"noBannedTypes": "off"
					},
					"suspicious": {
						"noConfusingVoidType": "off",
						"noExplicitAny": "off"
					}
				}
			}
		},
		{
			"includes": ["**/*.test.ts", "**/*.test.tsx"],
			"linter": {
				"rules": {
					"suspicious": {
						"noExplicitAny": "off"
					}
				}
			}
		}
	],
	"vcs": {
		"clientKind": "git",
		"enabled": false,
		"useIgnoreFile": true
	}
}
